<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/go_back_btn"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:minWidth="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="end"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/play_btn_desc"
        android:scaleType="centerCrop"
        android:src="@drawable/chevron_left" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/action_settings"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/action_settings"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/settings" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/action_percentage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="220dp"
        android:contentDescription="@string/action_settings"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/percentage_to_decimal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/action_arrows"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/action_settings"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/diagonal_arrow" />

    <ImageView
        android:id="@+id/physics_image_element"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon" />

    <SeekBar
        android:id="@+id/replay_seek_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:max="200"
        android:padding="100px"
        android:progress="200"
        android:layout_alignParentBottom="true" />

</RelativeLayout>